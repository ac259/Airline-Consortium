  vertical-align: top;
}
.snip1506 .profile-image,
.snip1506 figcaption {
  float: left;
}
.snip1506 figcaption {
  width: 70%;
  background-color: #333333;
  color: #fff;
  padding: 25px;
  display: inline-block;
  margin-left: 4%;
