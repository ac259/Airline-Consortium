}
.snip1506 figcaption:after {
  content: '';
  position: absolute;
  right: 70%;
  top: 30px;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 10px 10px 10px 0;
  border-color: transparent #333333 transparent transparent;
}
.snip1506 h3,
.snip1506 h4,
.snip1506 p {
  margin: 0 0 5px;
}
.snip1506 h3 {
  font-weight: 600;
  font-size: 1.2em;
  font-family: 'Montserrat', Arial, sans-serif;
}
.snip1506 h4 {
  color: #8c8c8c;
  font-weight: 400;
  letter-spacing: 2px;
}
.snip1506 p {
  font-size: 0.9em;
  letter-spacing: 1px;
  opacity: 0.9;
}
.snip1506 .icons {
  text-align: center;
  width: 100%;
}
.snip1506 i {
  padding: 10px 2px;
  display: inline-block;
  font-size: 18px;
  font-weight: normal;
  color: #ffffff;
  opacity: 0.75;
}
.snip1506 i:hover {
  opacity: 1;
  -webkit-transition: all 0.35s ease;
  transition: all 0.35s ease;
}
.snip1506 a {
  text-decoration: none;
}
